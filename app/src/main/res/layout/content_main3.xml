<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main3Activity"
    tools:showIn="@layout/app_bar_main3"
    android:background="@color/black"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    //upper cards
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewQuickBill"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:elevation="8dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Quick Bill"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="italic"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardAttendance"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:elevation="8dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Attendance"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="italic"/>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/CardAddServices"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add service"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="italic" />


            </android.support.v7.widget.CardView>

        </LinearLayout>

// *******************************
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/black"

            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">


            <TextView
                android:id="@+id/businessName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Bussiness Name"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

//****************************************


        //MIDDLE CARDS

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

     <!--       <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:padding="20dp"
                android:rowCount="4">-->

            //LAYOUT FIRST CARDS
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/backgr">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="3dp"
                    android:padding="20dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_last_visit"
                        android:layout_marginLeft="50dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Visit"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />


                    <TextView
                        android:id = "@+id/lastVisitCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="last visit"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:textStyle="italic"/>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_activate_form"
                        android:layout_marginLeft="50dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activate Form"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/ActivateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Activate Form"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />



                </android.support.v7.widget.CardView>
            </LinearLayout>


               //LAYOUT SECOND CARDS

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/backgr"
                android:layout_marginTop="20dp"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_expiry"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                    <TextView
                        android:id = "@+id/ExpiryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Activate Form"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_expiry"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />


                </android.support.v7.widget.CardView>


            </LinearLayout>

            //LAYOUT THIRD CARDS
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:orientation="horizontal"
                   android:gravity="center_horizontal"
                   android:background="@drawable/backgr"
                   android:layout_marginTop="20dp">

                   <android.support.v7.widget.CardView
                       android:id="@+id/card5"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_margin="20dp"
                       android:elevation="3dp"
                       app:cardBackgroundColor="@color/colorPrimaryDark"
                       app:cardCornerRadius="30dp">


                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_total_customer"
                           android:layout_marginLeft="50dp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Customer"
                           android:textColor="#000000"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="40dp"
                           android:textSize="20dp"
                           android:textStyle="italic" />

                   </android.support.v7.widget.CardView>


                   <android.support.v7.widget.CardView
                       android:id="@+id/card6"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_margin="20dp"
                       android:elevation="3dp"
                       app:cardBackgroundColor="@color/colorPrimaryDark"
                       app:cardCornerRadius="30dp">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_service_available"
                           android:layout_marginLeft="50dp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Service Available"
                           android:textColor="#000000"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="40dp"
                           android:textSize="20dp"
                           android:textStyle="italic" />


                   </android.support.v7.widget.CardView>

               </LinearLayout>



            //LAYOUT FOURTH CARDS
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/backgr"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_stock_item"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Item"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:textSize="20dp"
                        android:textStyle="italic"/>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card8"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="3dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_total_customer"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today Visitor"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:textSize="20dp"
                        android:textStyle="italic" />


                </android.support.v7.widget.CardView>


            </LinearLayout>


           <!-- </GridLayout>-->


        </LinearLayout>


    <!--    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email here"
                android:textColorHint="#fff"


                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="#fff"


                />


        </LinearLayout>-->








    </LinearLayout>

   </ScrollView>


</LinearLayout>